@top Program { expression* }

@skip { space | LineComment }

expression {
  Path |
  String |
  BooleanLiteral |
  Application { "(" expression* ")" }
}

@tokens {
  @precedence { BooleanLiteral, Path }

  Path { $[a-zA-Z_\-0-9\.]+ }

  BooleanLiteral { "true" | "false" }

  String { '"' (!["\\] | "\\" _)* '"' }

  LineComment { ";" ![\n]* }

  space { $[ \t\n\r]+ }

  "(" ")"
}

@detectDelim
